<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/my_profile_image_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp"
        android:background="@drawable/profile_block"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/my_profile_image_img"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@drawable/profilelogoround"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/my_profile_name_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_profile_image_block"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="@drawable/profile_block"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/update_name_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Name"
            />
        <EditText
            android:id="@+id/update_surname_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Surname"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_profile_email_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_profile_name_block"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="@drawable/profile_block"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/update_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_profile_phone_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_profile_email_block"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="@drawable/profile_block"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/update_phone_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_profile_date_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_profile_phone_block"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="@drawable/profile_block"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/update_day_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Day"
            />
        <EditText
            android:id="@+id/update_month_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Month"
            />
        <EditText
            android:id="@+id/update_year_text"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Year"
            />
    </LinearLayout>
    <Button
        android:id="@+id/update_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_date_block"
        android:text="Update profile"
        />

</androidx.constraintlayout.widget.ConstraintLayout>