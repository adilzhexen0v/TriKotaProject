<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/my_profile_image_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp"
        android:background="@drawable/profile_block"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/my_profile_image_img"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:background="@drawable/round_img"
            android:clipToOutline="true"
            android:src="@drawable/profilelogo"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/my_profile_name_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_profile_image_block"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="@drawable/profile_block"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/my_profile_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/gray"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/my_profile_surname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_profile_email_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_profile_name_block"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="@drawable/profile_block"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/my_profile_email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/gray"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_profile_hospital_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_profile_email_block"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="@drawable/profile_block"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/my_profile_hospital_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/gray"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_profile_occupation_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_profile_hospital_block"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="@drawable/profile_block"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/my_profile_occupation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/gray"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/my_profile_experience_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_profile_occupation_block"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="@drawable/profile_block"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/my_profile_experience_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_profile_status_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_profile_experience_block"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="@drawable/profile_block"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/my_profile_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <Button
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/log_out"
        android:backgroundTint="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/my_profile_status_block"
        />
</androidx.constraintlayout.widget.ConstraintLayout>